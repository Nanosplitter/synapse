  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Server",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/server"
    },
    {
      "type": "node-terminal",
      "name": "Client",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/client"
    },
    {
      "type": "node-terminal",
      "name": "Bot",
      "request": "launch",
      "command": "npm run start",
      "cwd": "${workspaceFolder}/bot"
    }
  ],
  "compounds": [
    {
      "name": "All Services",
      "configurations": ["Server", "Client", "Bot"],
      "stopAll": true
    }
  ]
}
